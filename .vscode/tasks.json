{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "gulp",
	"isShellCommand": true,
	"args": [
		"--no-color"
	],
	"tasks": [
		{
			"taskName": "tsc",
			"args": [],
			"isBuildCommand": true,
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"taskName": "build-watch",
			"args": [],
			"isBuildCommand": false,
			"isBackground": true,
			"problemMatcher": [
				"$lessCompile",
				"$tsc",
				"$eslint-compact"
			]
		}
	]
}