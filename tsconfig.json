{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src/app",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@yes/lib": [
                "lib"
            ],
            "@yes/store/*": [
                "store/*"
            ],
            "@yes/services": [
                "services"
            ],
            "@yes/styles/*": [
                "styles/*"
            ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}